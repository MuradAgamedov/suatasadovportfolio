{% set siteSettings = craft.entries.section('headerSettings').one() %}
{% set copyright = siteSettings.copyrightText ?? '© ' ~ now|date('Y') ~ ' Suat Əsədov. Bütün hüquqlar qorunur.' %}
{% set whatsapp = siteSettings.whatsappNumber ?? '+994 55 763 97 85' %}

<footer class="py-10 bg-white border-t">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row items-center justify-between gap-4">

    <!-- Sol hissə: copyright -->
    <p class="text-sm text-slate-500">
      {{ copyright|raw }}
    </p>

    <!-- Sağ hissə: naviqasiya -->
    <nav class="text-sm flex items-center gap-4 text-slate-600">
      <a href="#xidmetler" class="hover:text-slate-900">{{dict['services']}}</a>
      <a href="#sertifikatlar" class="hover:text-slate-900">{{dict['certificates']}}</a>
      <a href="#elaqe" class="hover:text-slate-900">{{dict['contact']}}</a>

      {% if whatsapp %}
        <a href="https://wa.me/{{ whatsapp|replace({' ': '', '+': ''}) }}" 
           target="_blank" 
           class="hover:text-green-600 flex items-center gap-1">
          <i data-lucide="message-circle" class="w-4 h-4"></i>
          WhatsApp
        </a>
      {% endif %}
    </nav>

  </div>
</footer>
