{% set heroUnderSpecs = craft.entries.section('herounderspecialists').all() %}

<!-- Trust / Tech stack badges -->
<section class="py-10">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">

      {% if heroUnderSpecs|length %}
        {% for spec in heroUnderSpecs %}
          <div
            class="h-14 flex items-center justify-center rounded-xl bg-white ring-1 ring-slate-200 text-xs font-medium">
            {{ spec.spect_title_main }}
          </div>
        {% endfor %}
      {% else %}
        {# Fallback: əgər CMS-də heç nə yoxdursa, default statik variant çıxır #}
        <div class="h-14 flex items-center justify-center rounded-xl bg-white ring-1 ring-slate-200 text-xs font-medium">Windows Server</div>
        <div class="h-14 flex items-center justify-center rounded-xl bg-white ring-1 ring-slate-200 text-xs font-medium">Active Directory</div>
        <div class="h-14 flex items-center justify-center rounded-xl bg-white ring-1 ring-slate-200 text-xs font-medium">VMware ESXi</div>
        <div class="h-14 flex items-center justify-center rounded-xl bg-white ring-1 ring-slate-200 text-xs font-medium">Hyper-V</div>
        <div class="h-14 flex items-center justify-center rounded-xl bg-white ring-1 ring-slate-200 text-xs font-medium">VLAN/VPN</div>
        <div class="h-14 flex items-center justify-center rounded-xl bg-white ring-1 ring-slate-200 text-xs font-medium">SSL/TLS & SSH</div>
      {% endif %}

    </div>
  </div>
</section>
